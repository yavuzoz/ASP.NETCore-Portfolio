@model List<MyPortfolio.DAL.Entities.Portfolio>

<section id="works" class="s-works target-section">

    <div class="row narrow section-intro has-bottom-sep">

        <div class="col-full">
            <h3>PORTFOLIO</h3>
            <h1>My Latest Projects</h1>

            <p class="lead">
                In this section, you can find the latest projects I have worked on, along with the GitHub repository links.
                The projects consist of personal or school projects I have developed using the latest technologies.
                Additionally, I aim to contribute to the community by sharing these projects as open source on GitHub.
                You can visit the GitHub repositories for more information or to contribute.
                Feel free to contact me for feedback or questions.
            </p>
        </div>

    </div>

    <div class="row masonry-wrap">
        <div class="masonry">
            @foreach (var item in Model)
            {
                <div class="masonry__brick">
                    <div class="item-folio">

                        <div class="item-folio__thumb">
                            <a href="@item.ImageUrl" class="thumb-link" title="The Beetle Car" data-size="1050x700">
                                <img src=" @item.ImageUrl"
                                     alt="">
                                <span class="shadow-overlay"></span>
                            </a>
                        </div>

                        <div class="item-folio__text">
                            <h3 class="item-folio__title">
                                @item.Title
                            </h3>

                            <p class="item-folio__cat">
                                @item.SubTitle
                            </p>
                        </div>

                        <a href="@item.Url" target="_blank" class="item-folio__project-link" title="Project link">
                            <i class="im im-link"></i>
                        </a>
                        <div class="item-folio__caption">
                            <p>@item.Description</p>
                        </div>


                    </div> <!-- end item-folio -->
                </div> <!-- end masonry__brick -->
            }
        </div>
    </div> <!-- end masonry -->

</section>
